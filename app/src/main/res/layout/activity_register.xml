<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <EditText
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/layer_edittext"
        android:id="@+id/username"
        android:hint="用户名"
        />

    <EditText
        android:background="@drawable/layer_edittext"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/passaword"
        android:hint="密码"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        />


    <EditText
        android:background="@drawable/layer_edittext"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/passawordTwo"
        android:hint="确认密码"
        android:layout_below="@+id/passaword"
        android:layout_alignLeft="@+id/passaword"
        android:layout_alignStart="@+id/passaword"
        />


    <EditText
        android:background="@drawable/layer_edittext"
        android:drawableLeft="@drawable/ic_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_phone"
        android:hint="电话"
        android:layout_below="@+id/edit_address"
        android:layout_alignLeft="@+id/edit_address"
        android:layout_alignStart="@+id/edit_address"
        />

    <EditText
        android:background="@drawable/layer_edittext"
        android:layout_width="match_parent"
        android:drawableLeft="@drawable/ic_backup"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_comment"
        android:hint="备注"
        android:layout_below="@+id/edit_phone"
        android:layout_alignLeft="@+id/edit_phone"
        android:layout_alignStart="@+id/edit_phone"
        />

    <TextView
        android:id="@+id/head"
        android:text="注册"
        android:textColor="#111"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="注册"
        android:layout_width="300dp"
        android:background="@drawable/shape_login"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edit_comment"
        android:layout_centerHorizontal="true" />

    <EditText
        android:background="@drawable/layer_edittext"
        android:drawableLeft="@drawable/ic_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/edit_address"
        android:hint="地址"
        android:layout_below="@+id/passawordTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
